{% extends 'admin/base.html.twig' %}

{% block title %}Results{% endblock %}

{% block body %}
    <div class="container-fluid">
        <table class="table table-hover">
            <tr class="text-center">
                <th>Id</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Survey</th>
                <th>Score of the user</th>
                <th>Score of the survey</th>
                <th>Action</th>
            </tr>
            {% for surveyanswer in pagination.data %}
                {% set confirm = 'return confirm("Are you sure you want to delete ?");' %}

                <tr class="text-center">
                    <td>{{ surveyanswer.id }}</td>
                    <td>{{ surveyanswer.userFirstname }}</td>
                    <td>{{ surveyanswer.userLastname }}</td>
                    <td>{{ surveyanswer.survey.title }}</td>
                    <td>{{ surveyanswer.score }}</td>
                    <td>{{ surveyanswer.total }}</td>
                    <td>
                        <a href="{{ path('admin_surveyanswer_details',{'id':surveyanswer.id}) }}"
                           class="btn btn-primary"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('admin_surveyanswer_delete',{'id':surveyanswer.id}) }}" onclick="{{ confirm }}" class="btn btn-danger"><i
                                    class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        {{ pagination.display() }}
        {# include 'admin/partials/pagination.html.twig' with {'route':'admin_answer_list'} #}
    </div>
{% endblock %}